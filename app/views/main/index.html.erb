<section id="news">
  <div class="newsdata">
    <div class="questionlist">
      <h2 class="cat_title"><span><a href="<%= news_index_path %>" class="more">MORE+</a></span>新闻中心</h2>
      <ul>
        <% @journalisms.each do |q| %>
            <li>
              <a href="<%= news_path(q) %>" title="<%= q.title %>" target="_blank">
                · <%= q.title %>
              </a>
            </li>
        <% end %>
      </ul>
    </div>
    <div id="newsbox">
      <h2 class="cat_title"><span><a href="<%= questions_path %>" class="more">MORE+</a></span>
        <a href="<%= questions_path %>" title="常见问题">常见问题</a>
      </h2>
      <% @questions.each do |q| %>
          <ul>
            <li>
              <div class="newslist">
                <a href="<%= question_path(q) %>" title="<%= q.title %>"><%= q.title %></a>
                <span>UPTATED:<%= my_time_format q.created_at %></span>

                <p><%= truncate_u(q.description, 60).html_safe %></p>
              </div>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
</section>
