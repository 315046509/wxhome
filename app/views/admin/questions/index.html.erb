<script>
    <% if flash[:note]%>
    alert('<%=flash[:note]%>');
    <% end%>
</script>
<div>
  <ul class="breadcrumb">
    <li>
      <a href="#">Home</a> <span class="divider">/</span>
    </li>
    <li>
      问题列表
    </li>
  </ul>
</div>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-header well" data-original-title>
      <h2><i class="icon-list-alt"></i> 问题列表</h2>
    </div>
    <div class="box-content">
      <div class="form-actions">
        <div style="float: left">
          <%= link_to '添加问题', new_admin_question_path, :class => "btn btn-primary" %>
        </div>
      </div>
      <table class="table table-striped table-bordered bootstrap-datatable datatable">
        <thead>
        <tr>
          <th>ID</th>
          <th>问题</th>
          <th>创建时间</th>
          <th>详细</th>
          <th>修改</th>
          <th>删除</th>
        </tr>
        </thead>
        <tbody>
        <% @questions.each do |q| %>
            <tr>
              <td><%= q.id %></td>
              <td><%= truncate_u(q.title, 10) %></td>
              <td><%= truncate_u(q.description, 10).html_safe %></td>
              <td class="center"><%= my_datetime_format q.created_at %></td>
              <td class="center"><%= link_to "详细", admin_question_path(q) %></td>
              <td><%= link_to '修改', edit_admin_question_path(q) %></td>
              <td><%= link_to '删除', admin_question_path(q), :method => :delete, :confirm => "您确定要删除吗?" %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="pagination pagination-centered">
        <ul>
          <%= paginate @questions %>
        </ul>
      </div>
    </div>
  </div>
  <!--/span-->
</div><!--/row-->