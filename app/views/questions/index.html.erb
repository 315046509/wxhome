<section id="content">
  <div class="wrapper">
    <div class="contentbar">
      <br/>
      <% @questions.each do |q| %>
          <div class="jiajianlist">
            <div class="jiajianbox">
              <h4><em></em><%= link_to q.title, question_path(q) %></h4>
              <ul style="display: block;">
                <%= truncate_u(q.description, 60).html_safe %>
              </ul>
            </div>
          </div>
      <% end %>
      <div class="pager">
        <div class="pagination pagination-centered">
          <ul>
            <%= paginate @questions %>
          </ul>
        </div>
      </div>
    </div>

    <div class="sidebar">
