        for (var i = 0; i < lis.length; i++) {
            if (lis.eq(i).attr("class") == "cur") {
                n = i;
            }
        }
        lis.eq(0).hover(function () {
            $(".arrow").stop(true, true).animate({left: "0px"}, speed);
            lis.removeClass("cur");
            $(this).addClass("cur");
        })
        lis.eq(1).hover(function () {
            $(".arrow").stop(true, true).animate({left: "370px"}, speed);
            lis.removeClass("cur");
            $(this).addClass("cur");
        })
