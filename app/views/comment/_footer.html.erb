            lis.removeClass("cur");
            $(this).addClass("cur");
        })
        nav.mouseleave(function () {
            $(".arrow").stop(true, true).animate({left: arrow}, speed);
            lis.removeClass("cur");
            lis.eq(n).addClass("cur");
        })
    }())
