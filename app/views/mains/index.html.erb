<h1>后台管理</h1>

<table>
  <thead>
    <tr>
      <th>名字</th>
      <th>联系电话</th>
      <th>地址</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mains.each do |main| %>
      <tr>
        <td><%= main.name %></td>
        <td><%= main.tel %></td>
        <td><%= main.address %></td>
        <td><%= link_to '编辑', edit_main_path(main) %></td>
        <td><%= link_to '删除', main, method: :delete, data: { confirm: '你确定删除吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
